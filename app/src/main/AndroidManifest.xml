<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gwaac.bracketmaster" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BracketMasterApplication"
        android:allowBackup="true"
        android:icon="@drawable/bm"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name=".data.helper.TournamentSuggestionProvider"
            android:authorities="gwaac.bracketmaster.data.helper.MySuggestionProvider" />

        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.CreationActivity"
            android:label="@string/title_activity_create"
            android:parentActivityName=".ui.MainActivity" >
        </activity>
        <activity
            android:name=".ui.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".ui.BracketActivity"
            android:label="View Bracket"
            android:parentActivityName=".ui.MainActivity" >
        </activity>
        <activity
            android:name=".ui.AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gwaac.bracketmaster.ui.MainActivity" />
        </activity>
    </application>

</manifest>
